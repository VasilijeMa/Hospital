    <Grid>
        <TextBlock FontSize="16" HorizontalAlignment="Left" Margin="184,49,0,0" TextWrapping="Wrap" Text="Symptoms: " VerticalAlignment="Top" Width="163"/>
        <TextBlock FontSize="16" HorizontalAlignment="Left" Margin="184,179,0,0" TextWrapping="Wrap" Text="Doctor's observation: " VerticalAlignment="Top" Width="163" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock FontSize="16" HorizontalAlignment="Left" Margin="184,223,0,0" TextWrapping="Wrap" Text="Doctor's conclusion: " VerticalAlignment="Top" Width="163"/>
        <TextBox Name="Symptoms" HorizontalAlignment="Left" Margin="358,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" Width="260"/>
        <TextBox Name="DoctorObservation" HorizontalAlignment="Left" Margin="358,179,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" Width="260"/>
        <TextBox Name="DoctorConclusion" HorizontalAlignment="Left" Margin="358,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="260"/>
        <Button Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="305,318,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="SubmitClick"/>
