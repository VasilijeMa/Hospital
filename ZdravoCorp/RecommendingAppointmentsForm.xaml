<Window x:Class="ZdravoCorp.RecommendingAppointmentsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp"
        mc:Ignorable="d"
        Title="RecommendingAppointmentsForm" Height="450" Width="484" Icon="/icon.png">
    <Window.Resources>
        <DataTemplate x:Key="doctorTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding FirstName}" Margin="5"/>
                <TextBlock Text="{Binding LastName}" Margin="5"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Label Content="Doctor: " HorizontalAlignment="Left" Margin="21,31,0,0" VerticalAlignment="Top" FontSize="25"/>
        <ComboBox Name="cmbDoctors" HorizontalAlignment="Left" Margin="212,33,0,0" VerticalAlignment="Top" Width="120" FontSize="25"/>
        <Label Content="Earliest hour: " HorizontalAlignment="Left" Margin="21,78,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,0.543" FontSize="25"/>
        <Label Content="Latest hour: " HorizontalAlignment="Left" Margin="21,130,0,0" VerticalAlignment="Top" FontSize="25"/>
        <TextBox Name="tbEHour" HorizontalAlignment="Left" Margin="212,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="25"/>
        <TextBox Name="tbLHour" HorizontalAlignment="Left" Margin="212,138,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="25"/>
        <Label Content="Latest date: " HorizontalAlignment="Left" Margin="21,183,0,0" VerticalAlignment="Top" FontSize="25"/>
        <DatePicker Name="dpLDate" HorizontalAlignment="Left" Margin="212,183,0,0" VerticalAlignment="Top" FontSize="25"/>
        <RadioButton x:Name="rbDoctor" Content="Doctor" HorizontalAlignment="Left" Margin="212,243,0,0" VerticalAlignment="Top" FontSize="25"/>
        <RadioButton x:Name="rbTimeSlot" Content="Time slot" HorizontalAlignment="Left" Margin="212,276,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Label Content="Priority: " HorizontalAlignment="Left" Margin="21,232,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Button x:Name="btnFind" Content="Find" HorizontalAlignment="Left" Margin="21,357,0,0" VerticalAlignment="Top" FontSize="25" Height="52" Width="105" Click="btnFind_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="329,357,0,0" VerticalAlignment="Top" FontSize="25" Height="52" Width="105" Click="btnExit_Click"/>

    </Grid>
</Window>
